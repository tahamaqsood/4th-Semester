<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40pt">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
     android:hint="0"
        android:textAlignment="viewEnd"
        android:textSize="190px"
        android:id="@+id/view1"
        ></TextView>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="90pt">

        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="AC"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btnAc"
            ></Button>

        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="+/-"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn2"
            ></Button>

        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="%"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn3"
            ></Button>

        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="/"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn4"
            ></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="130pt"
        >

        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="7"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn5"
            ></Button>
        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="8"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn6"
            ></Button>
        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="9"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn7"
            ></Button>
        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="X"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn9"
            ></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="170pt"
        >

        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="4"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn10"
            ></Button>
        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="5"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn11"
            ></Button>
        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="6"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn12"
            ></Button>
        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="-"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn13"
            ></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="210pt"
        >

        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn14"
            ></Button>
        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="2"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn15"
            ></Button>
        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="3"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn16"
            ></Button>
        <Button
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:text="+"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn17"
            ></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="250pt"
        >

        <Button
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:text="0"
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btn0"
            ></Button>
        <Button
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:text="."
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btnFullstop"
            ></Button>
        <Button
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:text="="
            android:textSize="80px"
            android:layout_margin="8dp"
            android:id="@+id/btnEqualsto"
            ></Button>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
